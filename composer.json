{
  "name": "mamuz/phalcon-playground",
  "description": "project description",
  "type": "project",
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "optimize-autoloader": true
  },
  "require": {
    "php": ">=5.4",
    "ext-phalcon": ">=2.0.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.6",
    "codeception/codeception": "~2.1"
  },
  "autoload": {
    "psr-4": {
      "Phpg\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "PhpgTest\\": "tests/"
    }
  },
  "scripts": {
    "post-create-project-cmd": [
      "touch ./ENV && cat \"development\" > ./ENV",
      "mkdir -m 777 ./data/{cache,log}",
      "mv -f ./.md-template/* . && rm -rf ./.mdtemplates",
      "composer global require \"phalcon/devtools:~2.0\"",
      "echo \"Be sure ~/.composer/vendor/phalcon/devtools/ide/2.* is added as external library in your IDE\"",
      "echo print \"sh ./scripts/rename-project.sh\" to rename namespaces"
    ]
  }
}
